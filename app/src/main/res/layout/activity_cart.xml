<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f9fa">

    <!-- Toolbar del Carrito -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarCart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_gradient"
        android:theme="@style/ThemeOverlay.Material3.Dark"
        app:titleTextColor="?attr/colorOnPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnBackCart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="?attr/colorOnPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Mi Carrito"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Mensaje cuando el carrito est치 vac칤o -->
    <LinearLayout
        android:id="@+id/tvEmptyCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="40dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_cart"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游 Tu carrito est치 vac칤o"
            android:textColor="#6c757d"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explora nuestros productos y a침ade algunos items"
            android:textColor="#6c757d"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Lista de productos en el carrito -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp" />

    <!-- FOOTER DECORATIVO MEJORADO -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:strokeColor="#e0e0e0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Informaci칩n del total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total:"
                    android:textSize="18sp"
                    android:textColor="#6c757d" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 0.00"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

            </LinearLayout>

            <!-- Bot칩n de checkout mejorado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Realizar Compra"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_shopping_bag"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:paddingVertical="12dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>